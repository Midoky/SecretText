<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f0f0"
    android:orientation="vertical" >
   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#484E61" >
    <TextView 
        android:id="@+id/newctts_title" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:textSize="24sp"
        />
    </RelativeLayout>
      <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22.0dp" >
 
                <ImageView
                    android:layout_width="57.0dp"
                    android:layout_height="57.0dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_c" />
            </FrameLayout>
    <EditText
        android:id="@+id/create_contact"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="15.0dip"
        android:drawablePadding="15.0dip"
        android:ems="4"
        android:hint="联系人姓名"
        android:background="#ffffff"
        android:drawableLeft="@drawable/contacts"
        android:paddingBottom="2.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="2.0dip"
        android:singleLine="true"
        android:textSize="16.0sp" />

    <EditText
        android:id="@+id/create_phonenumber"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="15.0dip"
        android:drawablePadding="15.0dip"
        android:ems="4"
        android:hint="   联系人电话"
        android:drawableLeft="@drawable/cell_phone"
        android:maxLength="11"
        android:numeric="integer"
        android:paddingBottom="2.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:background="#ffffff"
        android:paddingTop="2.0dip"
        android:singleLine="true"
        android:textSize="16.0sp" />


    <Button
        android:id="@+id/create_submit"
        android:layout_height="50.0dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="12.0dp"
        android:text="提交" 
        android:numeric="integer"
        android:paddingBottom="2.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="2.0dip"
        android:singleLine="true"
        android:textSize="16.0sp"
        android:background="#3498db"
        android:layout_marginRight="12.0dp"
        android:textColor="#ffffffff" 
        />

</LinearLayout>